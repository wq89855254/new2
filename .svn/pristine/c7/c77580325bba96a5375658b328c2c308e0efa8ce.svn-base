.menu-panel {
  display: block;
  z-index: 1000;
  position: absolute;
  top: 60px;
  left: 5px;
}

.global-time {
  position: absolute;
  top: -50px;
  left: 0;
  width: 509px;
  height: 40px;
  box-shadow: 0 0 5px rgba(0, 0, 0, .3);
  border-radius: 4px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 12px;
  .title {
    display: inline-block;
    padding-right: 10px;
    font-size: 15px;
  }
  .btns {
    display: flex;
  }
  .latest-btn {
    display: flex;
    align-items: center;
    margin-right: 10px;
    cursor: pointer;
    >i {
      display: block;
      width: 20px;
      height: 20px;
      margin-right: 3px;
      background: url(../../../assets/images/synthesis/latest-btn.png) no-repeat left top;
    }
    >span {
      line-height: 14px;
    }
    &:hover {
      >i {
        background-position-x: -20px;
      }
    }
  }
  .refresh-btn {
    display: flex;
    align-items: center;  
    cursor: pointer;
    >i {
      display: block;
      width: 20px;
      height: 20px;
      margin-right: 3px;
      background: url(../../../assets/images/synthesis/refresh-btn.png) no-repeat left top;
    }
    >span {
      line-height: 14px;
    }
    &.active {
      >i {
        background-position-x: -20px;
      }
    }
  }
  /deep/ .ant-input-sm,
  /deep/ .ant-select-selection-selected-value {
    font-size: 16px;
    line-height: 22px;
    font-family: Arial;
    border-color: #bcbcca;
  }
}



.menus {
  z-index: 2000;
  position: absolute;
  top: 0;
  left: 0;
  padding: 4px;
  box-shadow: 0 0 4px rgba(154, 154, 154, 0.5);
  & > li {
    width: 95px;
    height: 34px;
    display: flex;
    align-items: center;
    margin-bottom: 4px;
    background: url(../../../assets/images/synthesis/menu.png) no-repeat 0 -34px;
    color: #fff;
    text-shadow: 0 1px 4px rgba(10, 70, 199, 0.75);
    // transition: all 0.3s;
    cursor: pointer;
    &>img {
      display: block;
      margin-left: 3px;
    }
    &>span {
      flex: 1;
      text-align: center;
    }
    &:last-child {
      margin-bottom: 0;
    }
    &:hover {
      background-position-y: -68px;
    }
    &.active {
      background-position-y: 0;
      text-shadow: 0 1px 4px rgba(0, 22, 70, 0.95);
    }
  }
}

