.fademenu-enter-active,
.fademenu-leave-active {
  transition: all 0.6s;
}
.fademenu-enter, .fademenu-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0;
  // transform: scale(0.6);
  transform: translate(-200px);
}




.slide-enter-active,
.slide-leave-active {
  overflow: hidden;
  transition: all 0.4s;
}
.slide-enter, .slide-leave-to /* .slide-leave-active below version 2.1.8 */ {
  height: 0;
}

