}

.one-col-element-box {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  clear: both;
  .one-element {
    width: 49%;
    margin-right: 10px;
  }
  .tj_name {
    display: inline-block;
    padding-right: 10px;
  }
}
.two-col-element-box {
  width: 49%;
