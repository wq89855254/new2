.content{
    position: absolute;
    right: 0;
    top: 40%;
    
    z-index: 1000; 
    // background: #fff;
    border-radius: 3px;
}
.sideBar{
    display: flex;
    border: 1px solid #b9b9b9;
    background: #f8f9f9;
    box-shadow: 0.5px 0.866px 5px 0px rgb( 0, 55, 112 );
    flex-direction: column;
    border-radius: 3px;
    &>div:nth-child(1){
        border-top: 3px solid #2d7cdc;
        border-radius: 3px 3px 0 0;
    }
    &>div{
        width: 100%;
        height: 43px;
        width: 32px;
        & span{
            font-size: 12px;
            color: #3780dd;
            display: block;
            text-align: center;
        }
        & i{
            display: block;
            width: 18px;
            height: 18px;
            margin: 0 auto;
            // margin-bottom: 2px;
            margin-top: 6px;
        }
    }
    &>div:nth-child(1) i{
        background: url('../../../assets/images/menus/radar.png') no-repeat 0px top;
    }
    &>div:nth-child(2) i{
        background: url('../../../assets/images/menus/situation.png') no-repeat 0px top;
    }
    &>div:nth-child(3) i{
        background: url('../../../assets/images/menus/forecast.png') no-repeat 0px top;
    }
    &>div:nth-child(4) i{
        background: url('../../../assets/images/menus/warning.png') no-repeat 0px top;
    }
    &>div i:hover{
        background-position: -20px top;
    }
    &>div .active{
        background-position: -40px  top !important;
    }
}
.sideBar_box{
    width: 270px;
    box-sizing: border-box;
    border: 1px soild #b9b9b9;
    position: absolute;
    right: 40px;
    top: 0;
    box-shadow: 0.5px 0.866px 4px 0px rgb( 0, 55, 112 ); 
    background: #fff;
    padding: 10px;
    &:after{
        content: "";
        position:absolute;
        width: 0;
        height: 0;
        border-width: 5px ;
        border-color: transparent transparent transparent #fff;
        border-style: solid;
        right: -10px;
        top: 46%;
    }
}
.top{
    display: flex;
    align-items: center;
}
.bottom{
    display: flex;
    & span{
        height: 100%;
        width: 100px;
    }
}