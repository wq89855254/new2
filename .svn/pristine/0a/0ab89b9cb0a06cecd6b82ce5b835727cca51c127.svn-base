.layer-legend {
    z-index: 9999;
    position: absolute;
    bottom: 0;
    left: -300px;
    transition: all .3s;
    &.spread {
        left: 0;
    }
}

.content {
    width: 300px;
    height: 142px;
    background-color: #fff;
    overflow-x: hidden;
    overflow-y: auto;
}
.btn {
    position: absolute;
    top: 0;
    left: 300px;
    width: 21px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    cursor: pointer;
    background: url(../../../assets/images/synthesis/legend-btn-bg.png) no-repeat;
    color: #fff;
}