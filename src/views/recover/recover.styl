.container
        width 100%
        height 100%
        background #fff
        .head
            display flex
            justify-content space-between
            height 100px
            line-height 100px
            
            .back
                font-size 13px
                margin-right 30px
                img
                    height 21px
                    vertical-align middle
                    cursor pointer
                span 
                    cursor pointer
                    
        .centerWrap
            width 1292px
            margin 0 auto
            .date_recover
                border-radius 8px
                border 1px solid #ededed
                background #f7f7f7
                box-shadow  0 0 10px 3px #f9f9f9
                .date_choose
                    width 600px
                    margin 20px auto
                    display flex
                    justify-content: space-around
                    vertical-align: middle
                    label
                        font-size 13px
                        color #637599
                        margin-right: 10px

                    .p_type
                        line-height: 34px   
                        &>span
                            display inline-block
                            background blue
                            margin-right 10px
                            border 1px solid #cbdcf1
                            border-radius: 5px;
                            color #807f7d
                            padding-left 15px 
                            background: linear-gradient(#eff5fc 15%,#e3edf9 45%,#dbe7f7 100%) 
                            &.active
                                border 1px solid rgb( 86, 148, 235 )
                                background: linear-gradient(#84b0ef 15%,#629bec 45%,#4b8dea 100%) 
                                

                .recover
                    width 93px
                    height 30px
                    margin 15px auto
                    text-align: center
                    line-height: 30px
                    border-radius: 20px
                    color #fff
                    background #4fa1f3
                    cursor pointer
                    img
                        margin-top -3px
                        vertical-align: middle
            .date_history
                h2
                    font-size 15px
                    color: rgb( 107, 107, 107 )
                    text-align: center
                    height 45px
                    line-height 60px
                :global(.ant-table-thead)
                    background red