.container
    width 100%
    height 100%
    background #fff
    .head
        width 622px
        margin 0 auto
        display flex
        justify-content space-between
        height 64px
        line-height 64px
        select 
            border-color: rgb( 169, 192, 223 );
            border-radius: 3px;
            background-color: rgb( 234, 243, 255 );
            margin-right 5px
            color #6d6e6e
            font-size 14px
            padding-left 5px
        .back
            font-size 13px
            margin-right 30px
            img
                vertical-align middle
                cursor pointer
            span 
                cursor pointer
    .dutyInfo
        width 688px
        height 800px
        margin 0 auto
        border 1px solid #000
        .table
            width 100%
            text-align: center
            thead
                th
                    border 1px solid #000
                    padding: 0 10px
                    height 44px
                    line-height: 44px
                    color #fff
                    &.red
                        color #ff0000
                        background #fff
                    &.chief
                        background #ff0000
                    &.foreman
                        background #00b050
                    &.mainboard
                        background #0070c0
                    &.follow
                        background #000
            tbody
                td
                    border 1px solid #000
                    color #000
                    &.red
                        color #ff0000
                    &.chief
                        background #ffc8c8
                    &.foreman
                        background #a3ffcd
                    &.mainboard
                        background #abe9ff